<body style="background-color: aliceblue">

<div id="loading" class="bg-secondary position-absolute top-50 start-50 translate-middle" style="z-index: 4; opacity: 80%;display: none">
    <div class="spinner-border m-5" style="width: 10rem; height: 10rem;" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>


<div class="position-absolute top-50 start-50"></div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="position: sticky; top: 0;z-index: 2;">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Toastmasters District 40</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <a class="nav-link <% if (page === "Dashboard") { %> active<%}%>" href="/">Dashboard</a>
                <a class="nav-link <% if (page === "Index") { %> active<%}%>" href=/index>Club Index</a>
                <a class="nav-link <% if (page === "Reports") { %> active<%}%>" href="/reports">Reports</a>
            </ul>
        </div>
    </div>
</nav>
<div class="m-3">
    <h1 class="display-6" id="title"><%= title %></h1>
    <hr>
    <div class="row align-items-start">
        <div class="col-lg-2">
            <form method="get" action="/update/division">
                <div class="input-group">
                    <label class="input-group-text" for="division">Division</label>
                    <select class="form-select" id="division" name="division" onchange="this.form.submit()">
                    </select>
                </div>
                <label>
                    <input hidden name="date" value="<%=year%>-<%=month%>">
                </label>
            </form>
        </div>
        <div class="col-lg-2">
            <form method="get" action="/update/area">
                <div class="input-group">
                    <label class="input-group-text" for="area">Area</label>
                    <select class="form-select" id="area" name="area" onchange="this.form.submit()">
                    </select>
                </div>
                <label>
                    <input class="divhidden" hidden name="division" value="">
                </label>
                <label>
                    <input hidden name="date" value="<%=year%>-<%=month%>">
                </label>
            </form>
        </div>
        <div class="col-lg-5">
            <form method="get" action="/update/club">
                <div class="input-group">
                    <label class="input-group-text" for="club">Club</label>
                    <select class="form-select" id="club" name="club" onchange="this.form.submit()">
                    </select>
                </div>
                <label>
                    <input class="areahidden" hidden name="area" value="">
                </label>
                <label>
                    <input hidden name="date" value="<%=year%>-<%=month%>">
                </label>
            </form>
        </div>
        <div class="col-lg-3">
            <form id="dateform" method="get" action="/update/year">
                <div class="input-group">
                    <label class="input-group-text" for="date">Date</label>
                    <input id="date" class="form-control" value="<%=year%>-<%=month%>" name="date" type="month" min="2009-01" placeholder="YYYY-MM" onchange="this.form.submit()"/>
                </div>
                <label>
                    <input class="areahidden" hidden name="area" value="">
                </label>
                <label>
                    <input class="divhidden" hidden name="division" value="">
                </label>
                <label>
                    <input class="clubhidden" hidden name="club" value="">
                </label>
            </form>
        </div>
    </div>
    </form>